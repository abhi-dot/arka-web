
<%- include('partials/header') -%>



<div class="container">
  <div class="jumbotron">
    <h1 class="display-3">Explore</h1>
    <p class="lead">Explore space with our youtube video recommendations..</p>
    <hr class="my-2">
    <p class="lead">
      <div class="row">
       <div class="col-md-4">
         Add new recommendation
       </div>
      <form action="/explore" method="POST">
          <div class="form-group col-md-6">
            <input type="text" name="recommendation[url]" required class="form-control" placeholder="Video URL">
          </div>
          <div class="form-group col-md-2">
            <input type="submit" class="btn btn-lg btn-success">
        </div>
      </form>
      </div>

    </p>
  </div>
  <div class="well">
   <div class="row">
     <% recommendation.forEach(recommendation => { %>
    <iframe height="280" class="col-sm-4"src="<%= recommendation.url.substr(0,43).replace("watch?v=","embed/") %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% }); %> 
   </div>
  </div>
</div>

<%- include('partials/footer') -%>